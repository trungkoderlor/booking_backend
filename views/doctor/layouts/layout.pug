doctype html
html(lang="vi")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title #{pageTitle} | Cổng Thông Tin Bác Sĩ
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css")
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css")
    link(rel="stylesheet", href="/css/doctor.css")
  body.bg-light
    nav.navbar.navbar-expand-lg.navbar-dark.bg-primary.sticky-top
      div.container
        a.navbar-brand(href=`${prefixDoctor}/dashboard`)
          img(src="/uploads/logo.svg" alt="Logo" width="200px"  class="me-2")
        button.navbar-toggler(type="button", data-bs-toggle="collapse", data-bs-target="#navbarNav")
          span.navbar-toggler-icon
        div#navbarNav.collapse.navbar-collapse
          ul.navbar-nav.ms-auto
            li.nav-item
              a.nav-link(href=`${prefixDoctor}/schedule`)
                i.fas.fa-calendar-alt.me-1
                | Lịch Khám
            li.nav-item
              a.nav-link(href=`${prefixDoctor}/booking`)
                i.fas.fa-user-clock.me-1
                | Lịch Hẹn
            li.nav-item
              a.nav-link(href=`${prefixDoctor}/profile`)
                i.fas.fa-user-md.me-1
                | Hồ Sơ
            li.nav-item
              a.nav-link(href=`${prefixDoctor}/auth/logout`)
                i.fas.fa-sign-out-alt.me-1
                | Đăng Xuất
    
    main.container.py-4
      div.content-wrapper.bg-white.shadow-sm.rounded.p-4
        block content
    
    footer.bg-dark.text-white.py-4.mt-5
      div.container.text-center
        p.mb-0 &copy; #{new Date().getFullYear()} Hệ Thống Đặt Lịch Khám Bệnh
        p.mb-0.small Cung cấp dịch vụ chăm sóc sức khỏe chất lượng

    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js")
    script(src="/js/doctor.js")
