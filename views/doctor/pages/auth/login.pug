extends ../../layouts/auth.pug

block content
  div.row.justify-content-center
    div.col-md-6.col-lg-5
      div.card.shadow-lg.border-0.rounded-lg.mt-5
        div.card-header.bg-primary.text-white.text-center.py-4
          h3.my-0
            i.fas.fa-user-md.me-2
            | Đăng Nhập Bác Sĩ
        div.card-body.p-4
          if expressFlash.error !=''
            div.alert.alert-danger.d-flex.align-items-center
              i.fas.fa-exclamation-circle.me-2
              span #{expressFlash.error}
          
          form(action="/doctor/auth/login" method="POST")
            div.form-floating.mb-3
              input#email.form-control(type="email" name="email" placeholder="name@example.com" required)
              label(for="email") Địa Chỉ Email
            
            div.form-floating.mb-3
              input#password.form-control(type="password" name="password" placeholder="Password" required)
              label(for="password") Mật Khẩu
            
            div.form-check.mb-3
              input#rememberPassword.form-check-input(type="checkbox")
              label.form-check-label(for="rememberPassword") Ghi nhớ đăng nhập
            
            div.d-grid
              button.btn.btn-primary.btn-lg(type="submit")
                i.fas.fa-sign-in-alt.me-2
                | Đăng Nhập
        
        div.card-footer.text-center.py-3
          div.small Cần trợ giúp? Liên hệ quản trị viên
