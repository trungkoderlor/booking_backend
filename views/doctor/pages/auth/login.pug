extends ../../layouts/auth.pug

block content
  div.row.justify-content-center
    div.col-md-6.col-lg-5
      div.card.shadow-lg.border-0.rounded-lg.mt-5
        div.card-header
          h3.text-center.font-weight-light.my-4 Đăng Nhập Bác Sĩ
        div.card-body.p-4
          form(action="/doctor/auth/login" method="POST")
            div.form-floating.mb-3
              input#email.form-control(type="email" name="email" placeholder="Email" required)
              label(for="email") Email
            
            div.form-floating.mb-3
              input#password.form-control(type="password" name="password" placeholder="Mật Khẩu" required)
              label(for="password") Mật Khẩu
            
            div.form-check.mb-3
              input#rememberPassword.form-check-input(type="checkbox" name="remember")
              label.form-check-label(for="rememberPassword") Ghi nhớ đăng nhập
            
            div.d-grid
              button.btn.btn-primary.btn-lg(type="submit")
                i.fas.fa-sign-in-alt.me-2
                | Đăng Nhập
        
        div.card-footer.text-center.py-3
          div.small Cần trợ giúp? Liên hệ quản trị viên
