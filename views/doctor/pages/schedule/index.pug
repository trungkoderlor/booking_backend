extends ../../layouts/layout

block content
  div.d-flex.justify-content-between.align-items-center.mb-4
    h2.mb-0
      i.fas.fa-calendar-check.me-2
      | Quản Lý Lịch Khám
    a.btn.btn-primary(href="/doctor/schedule/create")
      i.fas.fa-plus.me-1
      | Tạo Lịch Khám Mới

  if expressFlash.success
    div.alert.alert-success.alert-dismissible.fade.show
      i.fas.fa-check-circle.me-2
      | #{expressFlash.success}
      button.btn-close(type="button" data-bs-dismiss="alert")
  
  if expressFlash.error
    div.alert.alert-danger.alert-dismissible.fade.show
      i.fas.fa-exclamation-circle.me-2
      | #{expressFlash.error}
      button.btn-close(type="button" data-bs-dismiss="alert")
  
  div.row.mb-4
    div.col-md-6.mb-3.mb-md-0
      div.card.border-0.shadow-sm.h-100
        div.card-body.text-center.p-4
          div.icon-box.mb-3
            i.fas.fa-calendar-alt.fa-3x.text-primary
          h4 Lịch Khám Của Tôi
          p.text-muted Xem và quản lý các khung giờ khám bệnh của bạn
          a.btn.btn-primary.mt-2(href="/doctor/schedule")
            i.fas.fa-list.me-1
            | Xem Lịch Khám
    
    div.col-md-6
      div.card.border-0.shadow-sm.h-100
        div.card-body.text-center.p-4
          div.icon-box.mb-3
            i.fas.fa-user-clock.fa-3x.text-info
          h4 Lịch Hẹn Bệnh Nhân
          p.text-muted Xem và quản lý các lịch hẹn của bệnh nhân với bạn
          a.btn.btn-info.mt-2(href="/doctor/schedule/bookings")
            i.fas.fa-users.me-1
            | Xem Lịch Hẹn
