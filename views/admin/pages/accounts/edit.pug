extends ../../layouts/default.pug
include ../../mixins/alert.pug
include ../../mixins/select-tree.pug
block head 
  link(rel='stylesheet', href='/admin/css/form.css')
block main
  if(role.permissions.includes('account_edit'))
    +alert-error(expressFlash,5000)
    +alert-success(expressFlash,5000)
    h1(class="mb-4") Thêm mới tài khoản
    
    form( action=`${prefixAdmin}/accounts/edit/${account.id}?_method=PATCH`
            id="form-edit-account"
            method="POST"
            enctype="multipart/form-data")
      div(class="form-group")
        label(for="fullname") Họ tên *
        input(
          type="text"
          class="form-control"
          id="fullname"
          name="fullname"
          value = account.fullname
          required
        )
              
      div(class="form-group")
        label(for="email") Email *
        input(
          type="email"
          class="form-control"
          id="email"
          name="email"
          value= account.email
          required
        )

      div(class="form-group")
        label(for="phone") Số điện thoại
        input(
          type="text"
          class="form-control"
          id="phone"
          name="phone"
          value =account.phone
        )

      div(
        class="form-group" 
        upload-image
      )
        label(for="avatar") Avatar
        input(
          type="file"
          class="form-control-file"
          id="avatar"
          name="avatar"
          accept="image/*"
          upload-image-input
        )
        img(
          src=""
          class="image-preview"
          upload-image-preview
        )
        button(
          type="button"
          class = 'btn btn-danger btn-sm cancel-image-button-d'
          cancel-image-button
          style = "margin-top: 32px;margin-left: 10px;"
        ) Hủy
      div(class="form-group")
        label(for="role_id") Phân quyền
        select(name="role_id" id="role_id" class="form-control")
          option(disabled) -- Chọn --
          each role in roles
            option(
              value=role.id
              checked = role.id === account.role_id ? 'selected' : ''
            ) #{role.title}

      div(class="form-group form-check form-check-inline")
        input(
          type="radio"
          class="form-check-input"
          id="statusActive"
          name="status"
          value="active"
          checked= (account.status === 'active' ? true : false)
          
        )
        label(for="statusActive" class="form-check-label") Hoạt động

      div(class="form-group form-check form-check-inline")
        input(
          type="radio"
          class="form-check-input"
          id="statusInActive"
          name="status"
          value="inactive"
          checked= (account.status === 'inactive' ? true : false)
          
        )
        label(for="statusInActive" class="form-check-label") Dừng hoạt động

      div(class="form-group")
        button(
          type="submit"
          class="btn btn-primary"
        ) Cập nhật
  else
    h1(class="mb-4") Bạn không có quyền truy cập trang này
    p Vui lòng liên hệ quản trị viên để được hỗ trợ
    a(
      class = 'btn btn-primary btn-sm'
      href=`${prefixAdmin}/dashboard`
    ) Quay lại trang chủ 


        


